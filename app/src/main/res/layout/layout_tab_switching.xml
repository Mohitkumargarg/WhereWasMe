<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTabSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAddNewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@color/dark_purple">

            <TextView
                android:id="@+id/tvAddNewData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d_10"
                android:gravity="center"
                android:text="@string/add_new_data"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_4"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/llSaveNewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/dark_purple"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvSeeSavedData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d_10"
                android:gravity="center"
                android:text="@string/see_saved_data"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>