<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHeader"
        android:orientation="vertical">

        <include layout="@layout/layout_tab_switching" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lldivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_below="@id/llTabLayout"
        android:background="@color/white"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddViewFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lldivider"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/sky_blue">

            <TextView
                android:id="@+id/tvAddViewFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d_10"
                android:gravity="center"
                android:text="@string/add_new_file"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/sky_blue">

            <ImageView
                android:id="@+id/ivAddViewFile"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_margin="@dimen/d_10"
                android:src="@drawable/add_file" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llAddViewFile">

        <fragment
            android:id="@+id/map"
            tools:context=".activites.HomeScreenMain"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </fragment>

    </LinearLayout>


</RelativeLayout>